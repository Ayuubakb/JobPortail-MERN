pipeline {
    agent any
    environment{
        DOCKER_HOST = "tcp://172.18.0.2:2375"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy with Docker Compose') {
            steps {
                sh 'docker-compose down'
                sh 'docker-compose up -d'
            }
        }
    }
    post {
        always {
            cleanWs() 
        }
    }
}
